<h1>MongoDB - Exercise</h1>
<div class="row">
    <div class="col-sm-6 col-md-4">
         
      <div class="thumbnail">
        <section class="insert">
            <h3>Insert Data</h3>
           
            <form action="/product/insert" method="post">
                <div class="input">
                    <label for="imagePath">Image</label>
                    <input type="text" id="imagePath" name="imagePath" required>
                </div>
                <div class="input">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div class="input">
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description">
                </div>
                <div class="input">
                    <label for="price">Price</label>
                    <input type="number" id="price" name="price">
                </div>
                <button type="submit" class="btn btn-success">Insert</button>
            </form>
        </section>
      </div>
    </div>

<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <section class="get">
            <h3>Get Data</h3>
            <a href="/product/get-data">Load Product</a>
            <div>
                {{# each items }}
                    <article class="item">
                        <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                        <div class="caption">
                        <h3>Title: {{ this.title }}</h3>
                        <p>Description: {{ this.description }}</p>
                        <p>Price: {{ this.price }}</p>
                        <p>ID: {{ this._id }}</p>
                        </div>
                    </article>
                {{/each}}
            </div>
            
        </section>
   </div>
</div>


<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <section class="get">
            <h3>Get Order</h3>
            <a href="/user/signin">Load Order</a>
            
        </section>
   </div>
</div>

<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <section class="container">
            <h3>Update Data</h3>
            
            <form action="/product/update" method="post">
                <div class="input">
                    <label for="id">ID</label>
                    <input type="text" id="id" name="id" required>
                </div>
                <div class="input">
                    <label for="imagePath">Image</label>
                    <input type="text" id="imagePath" name="imagePath" required>
                </div>
                <div class="input">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div class="input">
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description" required>
                </div>
                <div class="input">
                    <label for="price">Price</label>
                    <input type="number" id="price" name="price">
                </div>
                <button type="submit" class="btn btn-success">Update</button>
            </form>
        </section>
   </div>
</div>

<div class="col-sm-6 col-md-4">
    <div class="thumbnail">
        <section class="delete">
            <h3>Delete Data</h3>
            <form action="/product/delete" method="post">
                <div class="input">
                    <label for="id">ID</label>
                    <input type="text" id="id" name="id" required>
                </div>
                
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        
        </section>
    </div>
</div>

</div>
