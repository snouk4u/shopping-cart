
<div class="row">
    <div class="col-sm-8 col-md-2">
         
      <div class="thumbnail">
        <section class="insert">
            <h3>ເພີ່ມສິນຄ້າ</h3>
           <form action="/user/insert" method="post">
                <div class="input">
                    <label for="imagePath">Image</label>
                    <input type="text" id="imagePath" name="imagePath" required>
                </div>
                <div class="input">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div class="input">
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description">
                </div>
                <div class="input">
                    <label for="price">Price</label>
                    <input type="number" id="price" name="price">
                </div>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <button type="submit" class="btn btn-success">Insert</button>
            </form>
            
        </section>
      </div>
    </div>

<div class="col-sm-8 col-md-3">
    <div class="thumbnail">
        <section class="get">
            
            <a href="/user/get-data"><h3>ກວດເບິ່ງສິນຄ້າທັງໝົດ</h3></a>
            {{#if items }}
            <div>
                {{# each items }}
                    <article class="item">
                        <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                        <div class="caption">
                        <h3>Title: {{ this.title }}</h3>
                        <p>Description: {{ this.description }}</p>
                        <p>Price: {{ number this.price }} ກີບ</p>
                        <p>ID: {{ this._id }}</p>
                        </div>
                        <hr class="hr">
                    </article>
                {{/each}}
            </div>
            {{ else }}


                <div>
                    <h2>ຍັງບໍ່ມີສິນຄ້າ</h2>
                </div>

            {{/if}}
        </section>
   </div>
</div>

<div class="col-sm-8 col-md-2">
    <div class="thumbnail">
        <section class="update">
            <h3>ແກ້ໄຂຂໍ້ມູນສິນຄ້າ</h3>
            
            <form action="/user/update" method="post">
                <div class="input">
                    <label for="id">ID</label>
                    <input type="text" id="id" name="id" required>
                </div>
                <div class="input">
                    <label for="imagePath">Image</label>
                    <input type="text" id="imagePath" name="imagePath" required>
                </div>
                <div class="input">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div class="input">
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description" required>
                </div>
                <div class="input">
                    <label for="price">Price</label>
                    <input type="number" id="price" name="price">
                </div>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <button type="submit" class="btn btn-success">ແກ້ໄຂ</button>
            </form>
        </section>
   </div>
</div>

<div class="col-sm-8 col-md-2">
    <div class="thumbnail">
        <section class="delete">
            <h3>ລົບສິນຄ້າ</h3>
            <form action="/user/delete" method="post">
                <div class="input">
                    <label for="id">ID</label>
                    <input type="text" id="id" name="id" required>
                </div>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <button type="submit" class="btn btn-danger">ລົບສິນຄ້າ</button>
            </form>
        </section>
    </div>
</div>

</div>
