<h1>Dash Board</h1>
<div class="row">
    <div class="col-sm-8 col-md-2">
         
      <div class="thumbnail">
        <section class="insert">
            <h3>ເພີ່ມສິນຄ້າ</h3>
           <form action="/user/insert" method="post">
                <div class="input">
                    <label for="imagePath">Image</label>
                    <input type="text" id="imagePath" name="imagePath" required>
                </div>
                <div class="input">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div class="input">
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description">
                </div>
                <div class="input">
                    <label for="price">Price</label>
                    <input type="number" id="price" name="price">
                </div>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <button type="submit" class="btn btn-success">Insert</button>
            </form>
            
        </section>
      </div>
    </div>

<div class="col-sm-8 col-md-3">
    <div class="thumbnail">
        <section class="get">
            <h3>ກວດເຊັກໃບຊັ່ງຊື້</h3>
            <a href="/user/get-order">ກວດເຊັກໃບຊັ່ງຊື້</a>
            {{# each items}}
            <div>
                <h3>ໃບຊັ່ງຊື້</h3>
                <p>ເລກທີ: {{ this._id }}</p>
                <p>ຊື່ຜູ້ຮັບ: {{ this.name }}</p>
                <p>ທີ່ຢູ່: {{ this.address }}</p>
                <div>
                    <h3>ລາຍການສິນຄ້າ:</h3> 
                    {{# each cart.items}}
                       <p>{{ this.item.title }} | ຈຳນວນ | {{ this.qty }} ຫໍ່</p>
                       
                    {{/each}}
                </div>
                <strong>ມູນຄ່າທັງໝົດ: {{ this.cart.totalPrice }} $</strong>
                
            <hr class="hr">
            </div>
            {{/each}}
        </section>
   </div>
</div>

<div class="col-sm-8 col-md-3">
    <div class="thumbnail">
        <section class="get">
            <h3>ກວດເຊິ່ງສິນຄ້າທັງໝົດ</h3>
            <a href="/user/get-data">ກວດເຊິ່ງສິນຄ້າທັງໝົດ</a>
            <div>
                {{# each items }}
                    <article class="item">
                        <img src="{{ this.imagePath }}" alt="..." class="img-responsive">
                        <div class="caption">
                        <h3>Title: {{ this.title }}</h3>
                        <p>Description: {{ this.description }}</p>
                        <p>Price: {{ this.price }}</p>
                        <p>ID: {{ this._id }}</p>
                        </div>
                    </article>
                {{/each}}
            </div>
            
        </section>
   </div>
</div>

<div class="col-sm-8 col-md-2">
    <div class="thumbnail">
        <section class="update">
            <h3>ແກ້ໄຂຂໍ້ມູນສິນຄ້າ</h3>
            
            <form action="/user/update" method="post">
                <div class="input">
                    <label for="id">ID</label>
                    <input type="text" id="id" name="id" required>
                </div>
                <div class="input">
                    <label for="imagePath">Image</label>
                    <input type="text" id="imagePath" name="imagePath" required>
                </div>
                <div class="input">
                    <label for="title">Title</label>
                    <input type="text" id="title" name="title" required>
                </div>
                <div class="input">
                    <label for="description">Description</label>
                    <input type="text" id="description" name="description" required>
                </div>
                <div class="input">
                    <label for="price">Price</label>
                    <input type="number" id="price" name="price">
                </div>
                <input type="hidden" name="_csrf" value="{{ csrfToken }}">
                <button type="submit" class="btn btn-success">ແກ້ໄຂ</button>
            </form>
        </section>
   </div>
</div>

<div class="col-sm-8 col-md-2">
    <div class="thumbnail">
        <section class="delete">
            <h3>ລົບສິນຄ້າ</h3>
            <form action="/product/delete" method="post">
                <div class="input">
                    <label for="id">ID</label>
                    <input type="text" id="id" name="id" required>
                </div>
                
                <button type="submit" class="btn btn-danger">ລົບສິນຄ້າ</button>
            </form>
        </section>
    </div>
</div>

</div>
